<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/cardview"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="4dp"
    android:layout_marginLeft="4dp"
    android:layout_marginRight="4dp"
    android:layout_marginTop="4dp">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:clickable="true"
        android:focusable="true"
        android:foreground="?android:attr/selectableItemBackground"
        android:orientation="horizontal">

        <View
            android:id="@+id/color"
            android:layout_width="8dp"
            android:layout_height="match_parent"
            android:layout_marginRight="4dp"
            android:background="@color/md_purple_400" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:padding="4dp">

            <LinearLayout

                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView

                        android:id="@+id/due_when"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="sans-serif-light"
                        android:text="Due Tomorrow!"
                        android:textColor="@color/colorAccent"
                        android:textSize="16sp"
                        android:textStyle="italic|bold" />

                    <TextView
                        android:id="@+id/course_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="sans-serif-light"
                        android:text="Linear Circuit Analysis"
                        android:textColor="@color/secondary_text_material_light"
                        android:textSize="14sp" />

                    <TextView
                        android:id="@+id/quiz_title"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="sans-serif-light"
                        android:text="Eigen Values and Eigen Vectors"
                        android:textColor="@color/primary_text_material_light"
                        android:textSize="22sp" />
                </LinearLayout>


                <com.github.zagum.switchicon.SwitchIconView
                    android:id="@+id/done_checkbox"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_gravity="center_vertical|top"
                    android:background="?selectableItemBackgroundBorderless"
                    android:clickable="true"
                    android:padding="4dp"
                    app:si_animation_duration="500"
                    app:si_disabled_alpha=".4"
                    app:si_disabled_color="#b7b7b7"
                    app:si_enabled="false"
                    app:si_no_dash="true"
                    app:si_tint_color="@color/colorAccent"
                    app:srcCompat="@drawable/ic_assignment_turned_in_black_36dp" />


            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/due_date"

                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"
                    android:layout_weight="1"
                    android:drawableLeft="@drawable/ic_date_range_black_18dp"
                    android:drawablePadding="8dp"
                    android:fontFamily="sans-serif-light"
                    android:gravity="center_vertical"
                    android:text="Wed, 23 Jan"
                    android:textColor="@color/colorPrimaryText"
                    android:textSize="16dp" />


                <TextView
                    android:id="@+id/due_time"

                    android:layout_width="0dp"

                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"
                    android:layout_weight="1"
                    android:drawableLeft="@drawable/ic_access_time_black_18dp"
                    android:drawablePadding="8dp"
                    android:fontFamily="sans-serif-light"
                    android:gravity="center_vertical"
                    android:text="8:00 a.m."
                    android:textColor="@color/colorPrimaryText"
                    android:textSize="16dp" />

            </LinearLayout>


        </LinearLayout>


    </LinearLayout>


</android.support.v7.widget.CardView>
